set hostname=cs.vu.nl

set use_from=yes

set from="mvermaat@cs.vu.nl"

set realname="Martijn Vermaat"

set delete=ask-yes

set spoolfile="~/mailbox"

set mbox="~/Mail/Archive"

set move=no

set signature="~/.sig"

set record="~/Mail/Sent"

set folder="~/Mail"

#mailboxes !
#mailboxes =F-Spot
#mailboxes =Sent
#mailboxes =Archive
#...

save-hook .* =Archive

set print=ask-no

set pager_stop
bind pager <up> previous-line
bind pager <down> next-line

macro index i "c!\n" "Go to inbox"
macro pager i "c!\n" "Go to inbox"

macro index y "c?" "show incoming mailboxes list"
macro pager y "c?" "show incoming mailboxes list"

ignore X-Spam-Score: X-CanItPRO-Stream: X-Canit-Stats-ID: X-Scanned-By:
ignore X-ngMessageSubType: X-WebmailclientIP: X-Keywords: X-UID:
ignore X-Virus-Scanned: Message-ID:

unignore Date:
