#!/bin/sh
# cron script for backup-manager

# Use in cron like this:
#  # Do a system backup every morning at 10:02
#    2 10 *   *   *     /home/martijn/bin/backup-manager >> /var/log/system_backup 2>&1


test -x /usr/sbin/backup-manager || exit 0

echo
echo "$(/bin/date)   Running daily backup"

# Storing dpkg selections
dpkg --get-selections > /etc/installed-software.log

# Only run if USB harddisk is attached
/usr/sbin/backup-manager --verbose --no-purge

echo "$(/bin/date)   Daily backup finished"
echo
