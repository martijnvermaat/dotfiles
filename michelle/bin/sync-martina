#!/bin/sh

# Mirror Martina's account at vermaat.name locally.
#
# Copyright (c) 2008, Martijn Vermaat

REMOTE_HOST=vermaat.name
REMOTE_USER=martinabrinkman
REMOTE_DIR=/home/martinabrinkman/
LOCAL_DIR=/home/martijn/Desktop/Martina

echo
echo "$(/bin/date)   Running rsync"

# Use rsync to mirror Martina's account
/usr/bin/rsync -e ssh -avz --delete \
    $REMOTE_USER@$REMOTE_HOST:$REMOTE_DIR $LOCAL_DIR

echo "$(/bin/date)   Finished rsync"
